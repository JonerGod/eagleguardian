<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- 重置密码策略 -->
        <reset-password />
        
        <!-- 强制锁定策略 -->
        <force-lock />
        
        <!-- 擦除数据策略 -->
        <wipe-data />
        
        <!-- 限制密码策略 -->
        <limit-password />
        
        <!-- 监控登录尝试策略 -->
        <watch-login />
        
        <!-- 禁用相机策略 -->
        <disable-camera />
        
        <!-- 禁用键盘策略 -->
        <disable-keyguard-features />
    </uses-policies>
</device-admin>
